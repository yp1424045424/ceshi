    <view class="cyx-container">
        <view class="cyx-top">
            <view class="cyx-choose"></view>
            <text class="cyx-title">全选</text>
        </view>
        <view class="cyx-bottom">
            <view class="cyx-leftBox">
                <view class="cyx-allPrice">
                    <image src="img/cyx-gouwuche/allprice.png" alt="" class="cyx-ap"/>
                    <text class="cyx-heji">合计</text>
                    <text class="cyx-mao">:</text>
                    <text class="cyx-num">￥162</text>
                </view>
                <view class="cyx-extraPrice">
                    <image src="img/cyx-gouwuche/extraprice.png" alt="" class="cyx-ep"/>
                    <text class="cyx-yunfei">运费￥20</text>
                    <text class="cyx-youhui">已优惠￥20</text>
                </view>
            </view>
            <view class="cyx-pay" type="submit">结算</view>
        </view>
    </view>
</view>