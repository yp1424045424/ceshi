.cyx-contain.cyx-contain{
    margin-top: 12rpx;
    width: 100%;
    height: calc(100% - 352rpx);
}

.cyx-contain > .cyx-container{
    height: 100%;
    width:700rpx;
    margin:0 auto;

}

ul.cyx-items{
    width: 100%;
    height: auto;
    padding-top: 16rpx;
    padding-bottom: 11rpx;
    border-bottom: 2rpx solid rgba(0, 0, 0, .05);
}

ul.cyx-items > li.cyx-top{
    width: 100%;
    height: 70rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

ul.cyx-items > li.cyx-shop{
    width: 100%;
}

.cyx-items > li.cyx-bottom{
    width: 100%;
    height: 72rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.cyx-top > .cyx-left{
    display: flex;
    align-items: center;
    margin-left: -.1rpx;
}

.cyx-left > .cyx-choose{

    width: 60rpx;
    height: 50rpx;
    background-position: -54rpx center;
    background-repeat: no-repeat;
    margin-top: 10rpx;
}
.cyx-choose image{
  width:100% ;
  height:100%;
}
.cyx-left > .cyx-title{
    height: 24rpx;
    font-size: 24rpx;
    font-weight: bold;
    line-height: 24rpx;
    letter-spacing: 1rpx;
    color: #3bacfe;
}

.cyx-left > .cyx-next{
    width: 10rpx;
    height: 17rpx;
    margin-left: 13rpx;
}

.cyx-top > .cyx-delete{
    width: 30rpx;
    height: 33rpx;
    margin-right: 1rpx;
    float: right;
}

.cyx-bottom > .cyx-left{
    width: auto;
    height: 100%;
    margin-left: 55rpx;
    display: flex;
    align-items: center;
    float:left;
}

.cyx-left > .cyx-totalPrice{
    height: 23rpx;
    font-size: 24rpx;
    font-weight: bold;
    line-height: 23rpx;
    letter-spacing: 13rpx;
    color: rgba(59, 172, 254, 0.6);
}

.cyx-left > .cyx-mao{
    width: 5rpx;
    height: 13rpx;
    font-size: 24rpx;
    font-weight: bold;
    line-height: 10rpx;
    color: rgba(54, 168, 254, 0.6);
    margin-left: -10rpx;
}

.cyx-left > .cyx-num{
    width: 69rpx;
    height: 22rpx;
    font-size: 30rpx;
    font-weight: bold;
    line-height: 22rpx;
    color: #36a8fe;
}
.cyx-bottom{
    width: 100%;
    height:44rpx;
    margin-top:20rpx;

}
.cyx-bottom > .cyx-btn{
    display: block;
    border: none;
    outline: none;
    width: 144rpx;
    height: 44rpx;
    background-color: #3bacfe;
    box-shadow: 0 5rpx 12rpx 0 rgba(59, 172, 254, .43);
    border-radius: 22rpx;
    font-size: 20rpx;
    font-weight: bold;
    color: #ffffff;
    float:right;
    margin:auto 0;
    text-align:center;
    line-height:44rpx;

}

.cyx-items > .cyx-shop{
    width: 100%;
    height: auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.cyx-shop > .cyx-left{
    height: 174rpx;
    display: flex;
    align-items: center;
    margin-left: -10rpx;
}

.cyx-left > .cyx-choose.hot{
    background-position: -6rpx center;
}

.cyx-left > .cyx-picture{
    width: 174rpx;
    height: 174rpx;
    background-color: #ffffff;
    box-shadow: 0 1rpx 21rpx 0 rgba(223, 223, 223, .43);
    border-radius: 10rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.cyx-left > .cyx-desc{
    width: auto;
    height: 76rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-left: 24rpx;
}

.cyx-desc > .cyx-name{
    height: 28rpx;
    font-size: 30rpx;
    font-weight: bold;
    line-height: 28rpx;
    letter-spacing: 1rpx;
    color: rgba(0, 0, 0, .6);
}

.cyx-desc > .cyx-price{
    width: 51rpx;
    height: 18rpx;
    font-size: 26rpx;
    font-weight: bold;
    line-height: 18rpx;
    color: rgba(142, 147, 151, .8);
}

.cyx-shop > .cyx-right{
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.cyx-right > .cyx-sub{
    margin-top: -5rpx;
    width: 40rpx;
    height: 40rpx;
}
.cyx-right > .cyx-add{
    width: 58rpx;
    height: 58rpx;
}
.cyx-right > .cyx-number{
    width: 23rpx;
    height: 18rpx;
    font-size: 26rpx;
    font-weight: bold;
    line-height: 18rpx;
    color: #36a8fe;
    margin: -5rpx 19rpx 0;
}

.cyx-footer{
    width: 100%;
    height: 249rpx;
    position: fixed;
    left: 0;
    bottom: 0;
}

.cyx-container > .cyx-top{
    width: 100%;
    height: 124rpx;
    display: flex;
    align-items: center;
    background-color:#f8fcff;
}

.cyx-top > .cyx-choose{
    display: inline-block;
    width: 50rpx;
    height: 50rpx;
    background-position: -64rpx 0;
    background-repeat: no-repeat;
}

.cyx-top > .cyx-choose.hot{
    background-position: -16rpx 0;
}

.cyx-top > .cyx-title{
    height: 23rpx;
    font-size: 24rpx;
    font-weight: bold;
    line-height: 23rpx;
    letter-spacing: 1rpx;
    color: #3bacfe;
}

.cyx-container > .cyx-bottom{
    width: 100%;
    height: 108rpx;
    background-color: #f1faff;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.cyx-bottom > .cyx-leftBox{
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: left;
    padding: 23rpx 22rpx;
    box-sizing: border-box;
}

.cyx-leftBox > .cyx-allPrice{
    display: flex;
    align-items: center;
}

.cyx-allPrice > .cyx-ap{
    width: 10rpx;
    height: 10rpx;
    margin-right: 10rpx;
}

.cyx-allPrice > .cyx-heji{
    height: 23rpx;
    font-size: 24rpx;
    font-weight: bold;
    line-height: 23rpx;
    letter-spacing: 13rpx;
    color: rgba(59, 172, 254, .6);
}

.cyx-allPrice > .cyx-mao{
    height: 13rpx;
    font-size: 24rpx;
    font-weight: normal;
    line-height: 20rpx;
    color: rgba(54, 168, 254, .6);
    margin-left: -10rpx;
}

.cyx-allPrice > .cyx-num{
    height: 26rpx;
    font-size: 36rpx;
    font-weight: normal;
    line-height: 26rpx;
    color: #36a8fe;
}

.cyx-leftBox > .cyx-extraPrice{
    display: flex;
    align-items: center;
}

.cyx-extraPrice > .cyx-ep{
    width: 10rpx;
    height: 10rpx;
    margin-right: 10rpx;
}

.cyx-extraPrice > .cyx-yunfei{
    height: 19rpx;
    font-size: 20rpx;
    font-weight: bold;
    line-height: 19rpx;
    letter-spacing: 1rpx;
    color: rgba(59, 172, 254, .6);
}

.cyx-extraPrice > .cyx-youhui{
    height: 19rpx;
    font-size: 20rpx;
    font-weight: bold;
    line-height: 19rpx;
    letter-spacing: 1rpx;
    color: rgba(59, 172, 254, .6);
    margin-left: 25rpx;
}

.cyx-bottom > .cyx-pay{
    display: block;
    border: none;
    outline: none;
    text-align:center;
    width: 380rpx;
    height: 60rpx;
    background-image: linear-gradient(90deg,
    #37e06f 0%,
    #32d69a 100%),
    linear-gradient(
            #3bacfe,
            #3bacfe);
    box-shadow: 0 4rpx 20rpx 0 rgba(55, 223, 116, .75);
    border-radius: 30rpx;

    font-size: 24rpx;
    font-weight: bold;
    line-height: 60rpx;
    letter-spacing: 1rpx;
    color: #ffffff;
    margin-bottom: -2rpx;
}

.wrapper{
    width: 100%;
    height: 100%;
    overflow: hidden;
}
.cyx-container{
  width: 700rpx;
  margin:0 auto;
}