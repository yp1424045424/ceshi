<view class="cyx-contain">
    <view class="cyx-container">
        <view class="cyx-items">
            <view class="cyx-top">
                <view class="cyx-left">
                    <view class="cyx-choose hot" style="background-image:url(img/cyx-gouwuche/items.png);"></view>
                    <text class="cyx-title">宅快修</text>
                    <image class="cyx-next" src="img/cyx-gouwuche/next.png" alt=""/>
                </view>
                <image class="cyx-delete" src="img/cyx-gouwuche/delete.png" alt=""/>
            </view>
            <view class="cyx-shop">
                <view class="cyx-left">
                    <view class="cyx-choose"></view>
                    <view class="cyx-picture">
                        <!-- <img class="cyx-product" src="img/cyx-gouwuche/product.png" alt=""> -->
                    </view>
                    <view class="cyx-desc">
                        <text class="cyx-name">潜水艇高端龙头</text>
                        <text class="cyx-price">￥60</text>
                    </view>
                </view>
                <view class="cyx-right">
                    <image src="img/cyx-gouwuche/sub.png" alt="" class="cyx-sub"/>
                    <text class="cyx-number">01</text>
                    <image src="img/cyx-gouwuche/add.png" alt="" class="cyx-add"/>
                </view>
            </view>
            <view class="cyx-bottom">
                <view class="cyx-left">
                    <text class="cyx-totalPrice">合计</text>
                    <text class="cyx-mao">:</text>
                    <text class="cyx-num">￥162</text>
                </view>
                <view class="cyx-btn" type="submit">去下单</view>
            </view>
        </view>
    </view>
</view>
