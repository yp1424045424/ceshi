/* pages/list/list.wxss */
.title{
    width: 100%;
    height: 88rpx;
    text-align: center;
    font-size: 36rpx;
    color: #41b2fc;
    line-height: 88rpx;
}
.main{
    width: 130%;
    height: 52rpx;
    display: flex;
    justify-content: space-around;

}
.main .p{
    width: 133rpx;
    height: 52rpx;
    font-size: 24rpx;
    color: #41b2fc;
    text-align: center;
    line-height: 52rpx;
}
.main .p.hot{
    background: #41b2fc;
    color: #fff;
    border-radius: 26rpx;
    box-shadow: 0 5rpx 12rpx rgba(59,172,254,0.4);
}
.cate{
    width: 100%;
    height: 90rpx;
    margin: 0 auto;
}
.cate .main1{
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: space-around;
}
.cate .main1 .cateBox{
    width: calc(100% / 3);
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}
.cate .main1 .cateBox text{
    font-size: 26rpx;
    color: #333;
    margin-right: 10rpx;
}
.cate .main1 .hot text{
    font-size: 26rpx;
    color: #41b2fc;
    margin-right: 10rpx;
}
.cate .main1 .hot image{
  transition: 0.3s;
    transform:rotate(180deg);
}
.bag-scroll{
    width: 100%;
    height: 242rpx;
    overflow: hidden;
}
.sk-bag-scroll{
    width: 100%;
    height: auto;
}
.bag-item{
    width: 100%;
    padding: 16rpx 24rpx;
    box-sizing: border-box;
    display: flex;
}
.bag-item .sk-bag-photo{
    width: 197rpx;
    height: 197rpx;
    border-radius: 10rpx;
    margin-right: 29rpx;
    box-shadow: 0 1rpx 21rpx rgba(223,223,223,0.4);
    display: flex;
    justify-content: center;
    align-items: center;
}
.sk-bag-photo image{
  width: 98rpx;
  height: 110rpx;
}
/* .bag-item .sk-bag-photo img{
    width: 120rpx;
    height: 145rpx;
} */
.bag-item .sk-bag-content{
    margin-top: 10rpx;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
}
.bag-item .sk-bag-content .sk-service-type .h3{
    font-size: 30rpx;
    color: #4f5b64;
    font-weight: normal;
}
.bag-item .sk-bag-content .sk-service-desc{
    margin-top: 10rpx;
    width: 100%;
    height: 56rpx;
    padding-bottom: 10rpx;
    border-bottom: 1rpx solid #efefef;
    box-sizing: border-box;
}
.bag-item .sk-bag-content .sk-service-desc .p{
    width: 480rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 24rpx;
    color: #c9cbcc;
     display: block;

}
.bag-item .sk-estimate_sale_price{
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    font-size: 22rpx;
    margin-top: 10rpx;
}
.bag-item .sk-estimate_sale_price .sk-item{
    display: flex;
    align-items: center;
}
.sk-item .dot{
    display: block;
    width: 5rpx;
    height: 5rpx;
    border-radius: 50%;
    background: #41b2fc;
    box-shadow: 0 2rpx 5rpx rgba(68,181,255,0.4);
    margin-right: 7rpx;
}
.sk-sale .dot{
    background: #31d094;
    box-shadow: 0 2rpx 5rpx rgba(54,214,129,0.4);
}
.sk-item .text{
    color: #c9cbcc;
    margin-right: 11rpx;
}
.sk-item .number{
    color: #41b2fc;
    font-size: 22rpx;
}
.sk-item .number .span{
    color: #b9e1ff;
}
.bag-item .sk-estimate_sale_price .sk-price{
    color: #fbb548;
    font-size: 22rpx;
}
.bag-item .sk-service-operator{
    margin-top: 10rpx;
    display: flex;
}
